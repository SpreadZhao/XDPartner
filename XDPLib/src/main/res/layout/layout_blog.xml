<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp"
    android:paddingVertical="14dp">

    <com.spread.xdplib.adapter.customsview.CircleImageView
        android:id="@+id/ivHeader"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:border_width="1dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/blog_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivHeader" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ivMore"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ivHeader"
        app:layout_constraintTop_toTopOf="@+id/ivHeader" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ivMore"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ivHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />
    <TextView
        android:id="@+id/ivMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/blog_margin_start"
        android:layout_marginTop="8dp"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivHeader" />
    <TextView
        android:id="@+id/ivTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginHorizontal="@dimen/blog_margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMessage" />
    <TextView
        android:id="@+id/ivContent"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginHorizontal="@dimen/blog_margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTitle" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginEnd="5dp"
        android:paddingBottom="18dp"
        app:layout_constraintEnd_toStartOf="@id/ivImage2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivContent" />

    <ImageView
        android:id="@+id/ivImage2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:paddingBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivImage"
        app:layout_constraintTop_toBottomOf="@+id/ivContent" />
    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/blog_eye"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/blog_margin_start"
        android:layout_marginEnd="@dimen/blog_icon_margin_start"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />
    <TextView
        android:id="@+id/tvPerson"
        android:textColor="@color/eye_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2"
        app:layout_constraintStart_toEndOf="@+id/ivEye" />
    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="18dp"
        android:visibility="invisible"
        android:layout_height="18dp"
        android:src="@drawable/blog_share"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/blog_margin_start"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />
    <ImageView
        android:id="@+id/ivLove"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/blog_love_selector"
        app:layout_constraintEnd_toStartOf="@+id/tvLovePerson"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/blog_icon_margin_start"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />
    <TextView
        android:id="@+id/tvLovePerson"
        android:textColor="@color/purple"
        android:text="12312222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2"
        app:layout_constraintEnd_toStartOf="@+id/ivCommit" />
    <ImageView
        android:id="@+id/ivCommit"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/blog_common"
        app:layout_constraintEnd_toStartOf="@+id/ivShare"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/blog_icon_margin_start"
        app:layout_constraintTop_toBottomOf="@+id/ivImage2" />

</androidx.constraintlayout.widget.ConstraintLayout>